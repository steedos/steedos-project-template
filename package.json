{
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "steedos-packages/*"
  ],
  "repository": "git://github.com/steedos-labs/contract.git",
  "scripts": {
    "start:platform": "cd steedos-platform-nodejs && yarn && yarn start",
    "start": "moleculer-runner steedos-packages/*/package.service.js --config steedos.config.js --hot --repl",
    "repl": "moleculer-runner --repl",
    "build": "lerna run build",
    "version:latest": "yarn build && lerna version --force-publish --exact",
    "publish:latest": "lerna publish from-package --registry https://registry.npmjs.org"
  },
  "dependencies": {
    "@steedos/service-package-loader": "^2.5",
    "bcryptjs": "^2.4.3",
    "dotenv-flow": "^3.2.0",
    "moleculer-repl": "^0.7.3",
    "ioredis": "^5.3.1"
  },
  "devDependencies": {
    "lerna": "^5.4.0"
  }
}
